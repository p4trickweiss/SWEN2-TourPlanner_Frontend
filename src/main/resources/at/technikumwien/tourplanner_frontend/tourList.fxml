<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<VBox  xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="at.technikumwien.tourplanner_frontend.presentation.controller.TourListController">
    <children>
        <HBox GridPane.hgrow="ALWAYS" spacing="5">
            <Label text="Tours" />
            <Button fx:id="btnAddTour" text="+" />
            <Button fx:id="btnDeleteTour" onAction="#deleteTour" text="-" />
            <Button fx:id="btnEditTour" text="..." />
        </HBox>
        <ListView fx:id="listViewTours" VBox.vgrow="ALWAYS"/>
    </children>
</VBox>
